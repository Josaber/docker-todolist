# init

docker run -v $(pwd)/../data:/var/lib/mysql -e MYSQL_ROOT_PASSWORD=123456 --name mysql-todolist --rm mysql &

# docker run -v $(pwd)/../data:/var/lib/mysql --name mysql-todolist --rm mysql &

cd ..
docker rmi mvn-project
docker build -t mvn-project ./

docker run --link mysql-todolist:db --name todolist --rm -p 8080:8080 mvn-project

